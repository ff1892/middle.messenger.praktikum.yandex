<div class="user-form__header">
    <div class="user-form__avatar">
      <input
        type="file" id="avatar"
        name="avatar"
        class="visually-hidden"
        accept="image/png,
        image/jpeg"
      >
      <label
        class="user-form__avatar-label"
        for="avatar"
      >
        <span class="visually-hidden">Загрузить фото</span>
        <img
        class="user-form__img"
        src="{{avatar}}"
        alt="{{avatarDescription}}"
        width="70"
        height="70">
      </label>
  </div>
  <h2 class="user-form__title">
    {{title}}
  </h2>
</div>
<fieldset class="user-form__fieldset">
  {{#each inputs}}
    <div class="user-form__field">
      {{{this}}}
    </div>
  {{/each}}
</fieldset>
  <div class="user-form__footer">
    <div class="user-form__submit">
      {{{button}}}
    </div>
    {{#if link}}
      <div class="user-form__link">
        {{{link}}}
      </div>
    {{/if}}
  </div>
