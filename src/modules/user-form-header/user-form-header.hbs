<div class="user-form__avatar">
  {{{buttonChange}}}
  {{#if avatar}}
    <img
    class="user-form__img"
    src="{{avatar}}"
    alt="Аватар {{firstName}}"
    width="70"
    height="70">
  {{else}}
    <img
    class="user-form__img"
    src="img/avatar-default.png"
    alt="Аватар по умолчанию"
    width="70"
    height="70">
  {{/if}}
</div>
<h2 class="user-form__title">{{title}}</h2>
